@page "{id:Guid}"
@model ToDoList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<a asp-page="Index">Back to list</a>

<div asp-validation-summary="All"></div>
<form method="post">
    <input asp-for="Activity.Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Activity.Name"></label>
        <div>
            <input asp-for="Activity.Name" class="form-control"/>
            <span asp-validation-for="Activity.Name"></span>
        </div>
    </div>
    <div>
        <label asp-for="Activity.Desription"></label>
        <div class="form-group">
            <textarea asp-for="Activity.Desription" class="form-control"></textarea>
            <span asp-validation-for="Activity.Desription"></span>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
